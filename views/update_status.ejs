<link rel="stylesheet" href="/css/update_status.css">

<div id="update-container" class="container text-center">
  <h3 class="text-center title">Update Status</h3>
  <form id="update-form" method="post">
    <select class="form-select form-select-lg mb-3" name="status">
      <option selected disabled>Select Status</option>
      <option value="Done">Done</option>
      <option value="Not Done">Not Done</option>
    </select>
    <input type="submit" class="btn btn-primary">
  </form>
</div>

<script src="/js/update_status.js"></script>